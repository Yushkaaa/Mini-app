.Carousel-Synced {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
}
.Carousel-Synced__top {
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: center;
  margin-bottom: 5px;
}
.Carousel-Synced__top .Carousel-Synced__top-day {
  display: inline-flex;
  text-align: center;
  margin-right: 4px;
  color: #b3b3b3;
  font-size: 14px;
  font-weight: normal;
  line-height: 30px;
  transition: font-size ease-in-out .2s;
}
.Carousel-Synced__top-day.active {
  color: #323223;
  font-size: 20px;
  font-weight: 600;
  line-height: 34px;
}
.Carousel-Synced__top .Carousel-Synced__top-day:last-child {
  margin-right: 0;
}
.Carousel-Synced__bottom {
  display: block;
  width: 100%;
  height: auto;
  margin-bottom: 20px;
}
.Carousel-Synced__bottom .Carousel__swiper {
  min-height: 275px;
  max-height: 275px;
  width: 100%;
  overflow: hidden;
  transition: height ease-out .3s;
}
.Carousel-Synced__bottom .Carousel__swiper .Carousel__swiper-slide {
  width: calc(100% - 30px);
  border-radius: 14px;
  overflow: hidden;
}
.Carousel-Synced__bottom .Carousel__swiper .Carousel__swiper-slide .__img {
  width: calc(100% - 30px);
  margin: 0 15px 15px 15px;
  height: 190px;
  border-radius: 14px;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  box-shadow: 0px 0px 12px 0px rgba(0, 0, 0, 0.15);
}
.Carousel-Synced__bottom .Carousel__swiper .Carousel__swiper-slide .__text {
  display: block;
  width: calc(100% - 30px);
  margin: 0 15px 15px 15px;
  color: #323232;
  font-size: 18px;
  line-height: 27px;
}