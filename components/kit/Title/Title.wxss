.Title {
  width: 100%;
  display: flex;
  align-items: space-between;
  position: relative;
}
.Title .__icon {
  width: auto;
  height: auto;
  display: block;
  text-align: center;
}
.Title .__icon .img {
  width: 15px;
  height: 15px;
}
.Title .__icon.Map {
  position: absolute;
  right: 0;
  top: 0;
  display: block;
}
.Title .common {
  display: block;
  padding-bottom: 10px;
  width: 100%;
}
.Title.Map {
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
  margin-bottom: 20px;
}
.Title rich-text.Title-Subtitle-Map {
  margin-bottom: 0px;
  margin-right: 5px;
  padding-bottom: 0;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-weight: 900;
  line-height: normal;
  color: #353535;
  text-align: left;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  width: auto;
  max-width: calc(48% - 5px);
  padding-right: 5px;
}
.Title text.Title-Subtitle-Map {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  color: #888888;
  line-height: normal;
  font-size: 13px;
  text-align: left;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  max-width: calc(48% - 5px);
  padding-right: 5px;
}
/* Subway */
.Title.Subway {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 15px;
}
.Title rich-text.Title-Subtitle-Subway {
  padding-bottom: 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-weight: 600;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  color: #353535;
  text-align: left;
  width: auto;
  max-width: calc(48% - 5px);
  font-size: 15px;
  font-weight: 600;
  line-height: normal;
  margin-bottom: 10px;
  font-size: 15px;
  line-height: 15px;
}
.Title text.Title-Subtitle-Subway {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  color: #888888;
  line-height: normal;
  font-size: 13px;
  line-height: 15px;
  text-align: left;
  max-width: calc(100% - 5px);
  padding-right: 5px;
}
.Title text.Title-Subtitle-Subway-number {
  height: 22px;
  width: 22px;
  line-height: 22px;
  text-align: center;
  font-size: 18px;
  color: #fff;
  border-radius: 4px;
  font-weight: 600;
  border: 1px solid #444444;
  background-color: #444444;
  display: block;
  position: absolute;
  right: 0;
  top: calc(50% - 11px);
}
