.Event-Card {
  position: relative;
  width: 100%;
  background: #ffffff;
  margin-bottom: 15px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.Event-Card .Event-Card__left {
  width: 181px;
  height: 218px;
  position: relative;
  display: block;
  margin-right: 20px;
}
.Event-Card .Event-Card__left .img {
  width: 100%;
  height: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.15);
  border-radius: 2px;
}
.Event-Card .Event-Card__right {
  width: calc(100% - 201px);
  height: 218px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.Event-Card__right--top {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.Event-Card__right--top .__text {
  font-weight: 900;
  text-align: left;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-style: normal;
  font-weight: 600;
  line-height: 24px;
  font-size: 17px;
  letter-spacing: -0.408px;
  color: #353535;
  display: block;
}
.Event-Card__right--top .__text-blue {
  color: #576B95;
  font-style: normal;
  font-weight: 600;
  line-height: 24px;
  font-size: 17px;
  letter-spacing: -0.408px;
  display: inline-block;
}
.Event-Card__right--middle .__text {
  font-style: normal;
  font-weight: normal;
  line-height: 18px;
  font-size: 13px;
  letter-spacing: -0.312px;
  color: #888888;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
}
.Event-Card__right--bottom .__text {
  font-style: normal;
  font-weight: 600;
  line-height: 28px;
  font-size: 28px;
  letter-spacing: -0.312px;
  color: #FF5467;
  white-space: nowrap;
  word-spacing: -5px;
}
.Event-Card__right--bottom .__text-gray {
  font-style: normal;
  font-weight: normal;
  line-height: 18px;
  font-size: 13px;
  letter-spacing: -0.312px;
  color: #888888;
  display: inline-block;
}