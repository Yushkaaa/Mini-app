.Rec-Event-Card {
  position: relative;
  width: 100%;
  background: #ffffff;
  margin-bottom: 15px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.Rec-Event-Card .Rec-Event-Card__title {
  margin-bottom: 18px;
}
.Rec-Event-Card .Rec-Event-Card__title .__text {
  font-weight: 900;
  line-height: normal;
  font-size: 30px;
  color: #353535;
  display: block;
  text-align: left;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  letter-spacing: -0.478333px;
}
.Rec-Event-Card .Rec-Event-Card__title .__text-gray {
  color: #888888;
}
.Rec-Event-Card .Rec-Event-Card__sub-title {
  margin-bottom: 20px;
  display: block;
  text-align: left;
  font-size: 15px;
  line-height: 25px;
  color: #888888;
  font-weight: 400;
}
.Rec-Event-Card .Rec-Event-Card__image {
  width: 100%;
  height: 322px;
  position: relative;
  display: block;
  margin-bottom: 16px;
}
.Rec-Event-Card .Rec-Event-Card__image .img {
  width: 100%;
  height: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.15);
  border-radius: 14px;
}
.Rec-Event-Card .Rec-Event-Card__description .__text {
  display: block;
  text-align: left;
  font-size: 18px;
  font-weight: 900;
  color: #000000;
  margin-bottom: 15px;
}
.Rec-Event-Card .Rec-Event-Card__description .__text text {
  color: #888888;
  font-size: 18px;
  font-weight: 450;
}
