/* components/postBox/postBox.wxss */

.container {
  border-radius: 12px;
  height: xxx;
  box-shadow: 0px 0px 8px lightgray;
  block-size: fit-content;
}
.gallery {
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  margin-left: 0;
  margin-top: 0px;
  margin-right: 0px;
  width: 100%;
  height: 172px;
}
.title {
  margin-left: 16px;
  margin-top: 8px;
  font-size: 18px;
  font-weight: bold;
}
.info-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: calc(100% - 30px);
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 15px;
}
.detail-container {
  display: flex;
  justify-content: flex-start;
  width: 100%;
  font-size: 12px;
  color: gray;
}
.detail-container__left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: calc(100% - 50px);
}
.detail-container__left Title {
  width: auto;
  margin-right: 5px;
}
.detail-container__right {
  display: flex;
  width: 50px;
}
.category {
  flex-grow: 1;
}
.vote {
  font-size: 16;
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 16px;
  border-top: 1px lightgray solid
}
.with-comma {
  display: inline-block;
  font-size: 14px;
  color: #8b8b8b;
}
.with-comma:not(:last-child):after {
  content: ",";
  margin-right: 6rpx;
}
.badge {
  font-size: 28rpx;
  padding: 4rpx 14rpx;
  color: white;
  display: inline-block;
}
